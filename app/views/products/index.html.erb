<h1> Cart </h1>

<ul>
  <% session[:cart].try(:each) do |item| %>
    <li><%= item %></li>
  <% end %>
</ul>

<h2>Add new products</h2>
<p>
  <%= form_tag products_path_url do %>
      <%= label_tag :product, "Item name:" %>
      <%= text_field_tag :product %>
      <%= submit_tag "add to cart" %>
    <% end %>
</p>
