<h1>Shopping Cart</h1>
<hr>
<h2>Items in cart</h2>
<ul>
  <% session[:cart].try(:each) do |item| %>
    <li><%= item %></li>
  <% end %>
</ul>
<hr>
<h2>Add item to cart</h2>
  <%= form_tag products_path_url do %>
    <%= label_tag :product, "Item name:" %>
    <%= text_field_tag :product %>
    <%= submit_tag "add to cart" %>
  <% end %>
