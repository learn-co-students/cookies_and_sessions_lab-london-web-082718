
<h1>Show all products</h1>

<ul>
  <% session[:cart].try(:each) do |product| %>
    <li><%= product %></li>
  <% end %>
</ul>

<h2>Add item to cart</h2>

  <%= form_tag products_path_url do %>
    <%= label_tag :product, "Item name:" %>
    <%= text_field_tag :product %>
    <%= submit_tag "add to cart" %>
  <% end %>
